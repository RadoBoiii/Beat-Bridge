# Flask Application Settings
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_SECRET_KEY=your-secret-key-change-this-in-production

# Backend Service URL
CONVERSION_SERVICE_URL=http://localhost:5001

# Spotify API
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:5000/spotify-callback

# Apple Music API
APPLE_MUSIC_TEAM_ID=your-apple-team-id
APPLE_MUSIC_KEY_ID=your-apple-key-id
APPLE_MUSIC_PRIVATE_KEY_PATH=keys/apple_music_auth_key.p8

# YouTube Music API
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:5000/youtube-callback

# Redis (Optional, for caching and job queue)
REDIS_URL=redis://redis:6379/0